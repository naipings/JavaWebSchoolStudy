<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
  version="6.0"
  metadata-complete="false">


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>cn.edu.swu.security.filter.AuthFilter</filter-class>
        <init-param>
            <param-name>ignoreUrls</param-name>
            <param-value>index.html;/login;/code;/register;/delete;register.html;register_successful.html;delete.html;delete_successful.html;.png;.jpg;.gif;.jpeg;.css;.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>AuthFilterRegister</filter-name>
        <filter-class>cn.edu.swu.security.filter.AuthFilterRegister</filter-class>
        <init-param>
            <param-name>ignoreUrls</param-name>
            <param-value>index.html;/login;/code;/register;/delete;register.html;register_successful.html;delete.html;delete_successful.html;.png;.jpg;.gif;.jpeg;.css;.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilterRegister</filter-name>
        <url-pattern>/register</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>AuthFilterDelete</filter-name>
        <filter-class>cn.edu.swu.security.filter.AuthFilterDelete</filter-class>
        <init-param>
            <param-name>ignoreUrls</param-name>
            <param-value>index.html;/login;/code;/register;/delete;register.html;register_successful.html;delete.html;delete_successful.html;.png;.jpg;.gif;.jpeg;.css;.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilterDelete</filter-name>
        <url-pattern>/delete</url-pattern>
    </filter-mapping>


</web-app>
