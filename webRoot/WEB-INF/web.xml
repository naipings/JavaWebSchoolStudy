<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
  version="6.0"
  metadata-complete="true">


    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cn.edu.swu.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cn.edu.swu.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>cn.edu.swu.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>cn.edu.swu.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AuthCodeServlet</servlet-name>
        <servlet-class>cn.edu.swu.AuthCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthCodeServlet</servlet-name>
        <url-pattern>/code</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>cn.edu.swu.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>cn.edu.swu.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>cn.edu.swu.AuthFilter</filter-class>
        <init-param>
            <param-name>ignoreUrls</param-name>
            <param-value>index.html;/login;/code;/register;/delete;register.html;register_successful.html;delete.html;delete_successful.html;.png;.jpg;.gif;.jpeg;.css;.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>AuthFilterRegister</filter-name>
        <filter-class>cn.edu.swu.AuthFilterRegister</filter-class>
        <init-param>
            <param-name>ignoreUrls</param-name>
            <param-value>index.html;/login;/code;/register;/delete;register.html;register_successful.html;delete.html;delete_successful.html;.png;.jpg;.gif;.jpeg;.css;.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilterRegister</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter>
        <filter-name>AuthFilterDelete</filter-name>
        <filter-class>cn.edu.swu.AuthFilterDelete</filter-class>
        <init-param>
            <param-name>ignoreUrls</param-name>
            <param-value>index.html;/login;/code;/register;/delete;register.html;register_successful.html;delete.html;delete_successful.html;.png;.jpg;.gif;.jpeg;.css;.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilterDelete</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>
